<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">

        <link rel="shortcut icon" href="/homepage/assets/favicon.ico" type="image/x-icon">
        <link rel="icon" href="/homepage/assets/favicon.ico" type="image/x-icon">

        <title>{% block title %}Welcome!{% endblock %}</title>
        {# <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>"> #}

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

        {# Include Vue.js from CDN #}
        <script src="https://cdn.jsdelivr.net/npm/vue@2"></script>
        {# Include Axios for making HTTP requests #}
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

        <!-- Homepage CSS files -->
        <link href="homepage/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
        <!-- Google Fonts -->
        <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

        <!-- Vendor CSS Files -->
        <link href="/homepage/vendor/aos/aos.css" rel="stylesheet">
        <link href="/homepage/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
        <link href="/homepage/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
        <link href="/homepage/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

        <!-- Template Main CSS File -->
        <link href="/homepage/assets/css/style.css" rel="stylesheet">
        <link href="/css/base_home.css" rel="stylesheet"/>

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {# Manage JavaScript inclusion manually or automatically #}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}

    </head>
    <body>
        <!-- ======= Sidebar ======= -->
        <header id="header">
            <div class="d-flex flex-column">
                <div class="profile">
                    <img id="nav-profile-img" src="homepage/assets/img/profile-img.jpg" alt="" class="img-fluid rounded-circle img-hor-vert">
                    <h1 class="text-light"><a href="index.html">Lukas Völler</a></h1>
                    <div class="social-links mt-3 text-center">
                        <a href="https://github.com/LukasVoeller/" target="_blank" rel="noreferrer noopener" class="twitter"><i class="bx bxl-github"></i></a>
                        <a href="https://www.linkedin.com/in/lukasvoeller/" target="_blank" rel="noreferrer noopener" class="linkedin"><i class="bx bxl-linkedin"></i></a>
                    </div>
                </div>

                <nav id="navbar" class="nav-menu navbar">
                    <ul>
                        <li><a href="{{ path('home') }}" class="nav-link {% if app.request.attributes.get('_route') == 'home' %}active{% endif %}"><i class="bx bx-home"></i> <span>Home</span></a></li>
                        <li><a href="{{ path('login') }}" class="nav-link {% if app.request.attributes.get('_route') == 'login' %}active{% endif %}">
                                <img style="width: 15%; padding-right: 5px; margin-left: -3px" src="/homepage/assets/img/Logo-Scorin-Wizard_edit.png">
                                <span>Scorin Wizard</span></a>
                        </li>
                    </ul>
                </nav>
            </div>
        </header><!-- End Sidebar -->

        <!-- Start Bootstrap Navbar -->
        <nav class="navbar navbar-dark fixed-top d-xl-none" style="background-color: #040b14">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('home') }}" rel="noopener noreferrer">Lukas Völler</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasDarkNavbar" aria-labelledby="offcanvasDarkNavbarLabel" style="background-color: #040b14">
                    <div class="offcanvas-header">
                        <!-- <h5 class="offcanvas-title" id="offcanvasDarkNavbarLabel">Lukas Völler</h5> -->
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <div id="nav-profile">
                            <div class="profile">
                                <img id="nav-profile-img" src="homepage/assets/img/profile-img.jpg" alt="" class="img-fluid rounded-circle img-hor-vert">
                                <h1 class="text-light"><a href="index.html">Lukas Völler</a></h1>
                            </div>
                        </div>

                        <nav id="navbar" class="nav-menu navbar">
                            <ul>
                                <li><a href="{{ path('home') }}" class="nav-link {% if app.request.attributes.get('_route') == 'home' %}active{% endif %}"><i class="bx bx-home"></i> <span>Home</span></a></li>
                                <li><a href="{{ path('login') }}" class="nav-link {% if app.request.attributes.get('_route') == 'login' %}active{% endif %}">
                                        <img style="width: 11%; padding-right: 5px; margin-left: -3px" src="/homepage/assets/img/Logo-Scorin-Wizard_edit.png">
                                        <span>Scorin Wizard</span></a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </nav><!-- End Bootstrap Navbar -->

        {% block body %}{% endblock %}
    </body>
</html>
