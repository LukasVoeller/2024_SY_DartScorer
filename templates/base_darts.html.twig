<!doctype html>
<html lang="en">
    <head>
        <title>{% block title %}Base{% endblock %}</title>

        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no">

        <!-- <link rel="icon" href="/homepage/assets/favicon.ico" type="image/x-icon"> -->
        <link rel="icon" href="/homepage/assets/img/Logo-Scorin-Wizard_edit.png" type="image/x-icon">

        {# Vue.js #}
        <script src="https://cdn.jsdelivr.net/npm/vue@2"></script>
        {# Axios #}
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        {# Bootstrap 5.3.3 #}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

        <!-- jQuery -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

        <!-- Bootstrap-select CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta2/dist/css/bootstrap-select.min.css" rel="stylesheet">

        <!-- Bootstrap-select JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta2/dist/js/bootstrap-select.min.js"></script>


        {# Vendor #}
        <link href="/homepage/vendor/aos/aos.css" rel="stylesheet">
        <link href="/homepage/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
        <link href="/homepage/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
        <link href="/homepage/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
        <link href="/homepage/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">

        {# Homepage #}
        <link href="/homepage/assets/css/style.css" rel="stylesheet">
        <link href="/css/base_darts.css" rel="stylesheet"/>
        <link type="text/css" href="/css/scorin-wizard/_global.css" rel="stylesheet"/>

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>

    <body>
        <!-- ======= Sidebar ======= -->
        <header id="header">
            <div id="nav-profile">
                <img id="nav-profile-img" src="/homepage/assets/img/Logo-Scorin-Wizard_edit.png" alt="" class="img-fluid rounded-circle img-hor-vert">
                <p style="color: white; text-align: center;">Welcome, {{ app.user.username }}! <a href="{{ path('logout') }}">Logout</a></p>
            </div>

            {% include './util/navbar_darts.html.twig' %}
        </header><!-- End Sidebar -->

        <!-- ======= Header ======= -->
        <nav id="navbar-top" class="navbar navbar-dark fixed-top">
            <div class="container-fluid">

                <div class="d-flex align-items-center" style="flex-grow: 1;">
                    {% if app.user %}
{#                        <img src="/homepage/assets/img/Logo-Scorin-Wizard_edit.png" alt="" style="width: 40px; align-self: center">#}
                        <p style="color: white; text-align: left; margin: 0; padding-left: 5px">
{#                            Scorin Wizard#}
{#                            {{ dump(app.user) }}#}
{#                            <a href="{{ path('logout') }}">Logout</a>#}

                            {% if app.request.pathinfo starts with '/new-game' %}
                                New Game
                            {% elseif app.request.pathinfo starts with '/player' %}
                                Manage Player
                            {% elseif app.request.pathinfo starts with '/user' %}
                                Manage User
                            {% elseif app.request.pathinfo starts with '/games' %}
                                Games
                            {% elseif app.request.pathinfo starts with '/game/new' %}
                                New Game
                            {% else %}
                                Welcome, {{ app.user.username }}!
{#                                <a href="{{ path('logout') }}">Logout</a>#}
                            {% endif %}
                        </p>
                    {% endif %}
                </div>

                <button class="navbar-toggler d-xl-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasDarkNavbar" aria-labelledby="offcanvasDarkNavbarLabel">
                    <div class="offcanvas-header">
                        <!-- <h5 class="offcanvas-title" id="offcanvasDarkNavbarLabel">Lukas VÃ¶ller</h5> -->
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body" style="padding-top: 0px">
                        <div id="nav-profile" style="display: grid; place-items: center;">
                            <img id="nav-profile-img" src="/homepage/assets/img/Logo-Scorin-Wizard_edit.png" alt="" class="img-fluid rounded-circle img-hor-vert" style="width: 75%; align-self: center">
                            <p style="color: white; text-align: center;">Welcome, {{ app.user.username }}! <a href="{{ path('logout') }}">Logout</a></p>
                        </div>

                        {% include './util/navbar_darts.html.twig' %}
                    </div>
                </div>
            </div>
        </nav><!-- End Header -->

        {% block body %}{% endblock %}
    </body>
</html>
