{% extends 'base_darts.html.twig' %}

{% block stylesheets %}
    <link type="text/css" href="/css/scorin-wizard/_global.css" rel="stylesheet"/>
    <link type="text/css" href="/css/scorin-wizard/profile.css" rel="stylesheet"/>
{% endblock %}

{% block title %}Profile{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('profileApp') }}
{% endblock %}

{% block body %}
    <div class="container px-3">
{#        <pre>{{ dump(app.user) }}</pre>#}

        <div id="profile-app">
            <script>
                window.currentUser = {{ userData|raw }};
                window.totalGamesPlayed = {{ totalGamesPlayed|json_encode|raw }};
                window.totalGamesWon = {{ totalGamesWon|json_encode|raw }};
                window.totalGamesLost = {{ totalGamesLost|json_encode|raw }};
                window.liveGamesCount = {{ liveGamesCount|json_encode|raw }};
                window.finishedGamesCount = {{ finishedGamesCount|json_encode|raw }};
            </script>
        </div>
    </div>
{% endblock %}
